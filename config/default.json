{
  "providers": {
    "open-ai": {
      "type": "cloud",
      "title": "OpenAI Translator",
      "apiKey": "<your-openai-api-key>",
      "model": "gpt-3.5-turbo"
    },
    "local-translate": {
      "type": "local",
      "title": "Local Translator",
      "command": "/path/to/translation-cli",
      "args": [
        "--input",
        "{text}",
        "--target",
        "{targetLanguage}"
      ]
    }
  },
  "translation": {
    "provider": "open-ai",
    "targetLanguage": "ua"
  }
}